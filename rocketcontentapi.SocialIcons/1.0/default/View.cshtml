@inherits RocketContentAPI.Components.RocketContentAPITokens<Simplisity.SimplisityRazor>
@using DNNrocketAPI;
@using Simplisity;
@using RocketContentAPI.Components;
@using DNNrocketAPI.Components;
@using RocketPortal.Components;


@{
    var articleData = (ArticleLimpet)Model.GetDataObject("articledata");
    var appThemeView = (AppThemeLimpet)Model.GetDataObject("appthemeview");
    var appThemeAdmin = (AppThemeLimpet)Model.GetDataObject("appthemeadmin");
    var moduleData = (ModuleContentLimpet)Model.GetDataObject("modulesettings");
    var portalData = (PortalLimpet)Model.GetDataObject("portaldata");
    var globalSettings = new SystemGlobalData();
}

@foreach (var articleRowData in articleData.GetRows())
{
    var info = articleRowData.Info;
<div id="@articleRowData.RowKey" class="w3-padding">

    <!--
           <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
               <path d="M400 32H48A48 48 0 0 0 0 80v352a48 48 0 0 0 48 48h137.25V327.69h-63V256h63v-54.64c0-62.15 37-96.48 93.67-96.48 27.14 0 55.52 4.84 55.52 4.84v61h-31.27c-30.81 0-40.42 19.12-40.42 38.73V256h68.78l-11 71.69h-57.78V480H400a48 48 0 0 0 48-48V80a48 48 0 0 0-48-48z" />
           </svg>

    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
        <path d="M279.14 288l14.22-92.66h-88.91v-60.13c0-25.35 12.42-50.06 52.24-50.06h40.42V6.26S260.43 0 225.36 0c-73.22 0-121.08 44.38-121.08 124.72v70.62H22.89V288h81.39v224h100.17V288z" />
    </svg>
    -->
    <!-- display title -->

    @if (info.GetXmlProperty("genxml/lang/genxml/textbox/title") != "")
    {
        <div class="w3-xlarge">@info.GetXmlProperty("genxml/lang/genxml/textbox/title")</div>



        @if (info.GetXmlProperty("genxml/textbox/twitter") != "")
        {
            <a href="@info.GetXmlProperty("genxml/textbox/twitter")" target="_blank"><i class="fab fa-twitter"></i></a>
        }


        @if (info.GetXmlProperty("genxml/textbox/linkedin") != "")
        {
            <a href="@info.GetXmlProperty("genxml/textbox/linkedin")" class="linkedinicon" target="_blank"><i class="fab fa-linkedin-in"></i></a>
        }

        @if (info.GetXmlProperty("genxml/textbox/facebook") != "")
        {
            <a href="@info.GetXmlProperty("genxml/textbox/facebook")" class="facebookicon" target="_blank"><i class="fab fa-facebook-in"></i></a>
        }
        @if (info.GetXmlProperty("genxml/textbox/youtube") != "")
        {
            <a href="@info.GetXmlProperty("genxml/textbox/youtube")" class="youtubeicon" target="_blank"><i class="fab fa-youtube"></i></a>
        }
        @if (info.GetXmlProperty("genxml/textbox/pinterest") != "")
        {
            <a href="@info.GetXmlProperty("genxml/textbox/pinterest")" class="pinteresticon" target="_blank"><i class="fab fa-pinterest-p"></i></a>
        }
        @if (info.GetXmlProperty("genxml/textbox/instagram") != "")
        {
            <a href="@info.GetXmlProperty("genxml/textbox/instagram")" class="instagramicon" target="_blank"><i class="fab fa-instagram"></i></a>
        }
        @if (info.GetXmlProperty("genxml/textbox/flickr") != "")
        {
            <a href="@info.GetXmlProperty("genxml/textbox/flickr")" class="flickricon" target="_blank"><i class="fab fa-flickr"></i></a>
        }
        @if (info.GetXmlProperty("genxml/textbox/viadeo") != "")
        {
            <a href="@info.GetXmlProperty("genxml/textbox/viadeo")" class="viadeoicon" target="_blank"><i class="fab fa-viadeo"></i></a>
        }
        @if (info.GetXmlProperty("genxml/textbox/vimeo") != "")
        {
            <a href="@info.GetXmlProperty("genxml/textbox/vimeo")" class="vimeoicon" target="_blank"><i class="fab fa-vimeo-v"></i></a>
        }
        @if (info.GetXmlProperty("genxml/textbox/tripadvisor") != "")
        {
            <a href="@info.GetXmlProperty("genxml/textbox/tripadvisor")" class="tripadvisoricon" target="_blank"><i class="fab fa-tripadvisor"></i></a>
        }
        @if (info.GetXmlProperty("genxml/textbox/rss") != "")
        {
            <a href="@info.GetXmlProperty("genxml/textbox/rss")" class="rssicon" target="_blank"><i class="fas fa-rss"></i></a>
        }
    }
</div>
}


